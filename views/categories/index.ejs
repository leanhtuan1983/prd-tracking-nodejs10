<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Danh sách Category</title>
  </head>
  <body>
    <h2>Danh sách Categories</h2>
    <a href="/dashboard">Dashboard</a>
    <a href="/management/categories/add">Thêm mới</a>
    <table border="1" cellpadding="5">
      <thead>
        <tr>
          <th>ID</th>
          <th>Tên</th>
          <th>Được thêm bởi</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody id="categoryTableBody">
        <!-- dữ liệu fetch sẽ hiển thị ở đây -->
      </tbody>
    </table>

    <script>
      async function loadCategories() {
        try {
          const res = await fetch("/management/category-list");
          const data = await res.json();
          if (data.success) {
            const tbody = document.getElementById("categoryTableBody");
            tbody.innerHTML = "";
            data.data.forEach((cat) => {
              const row = `
              <tr>
                <td>${cat.id}</td>
                <td>${cat.name}</td>
                <td>${cat.username}</td>
                <td>
                  <a href="/management/categories/edit/${cat.id}">Sửa</a> |
                  <a href="#" onclick="deleteCategory(${cat.id})">Xóa</a>
                </td>
              </tr>`;
              tbody.innerHTML += row;
            });
          } else {
            alert(data.message || "Không thể tải danh sách");
          }
        } catch (err) {
          console.error("Lỗi fetch:", err);
        }
      }

      async function deleteCategory(id) {
        if (!confirm("Bạn có chắc muốn xóa?")) return;
        try {
          const res = await fetch(`/management/categories/delete/${id}`);
          const data = await res.json();
          alert(data.message);
          loadCategories();
        } catch (err) {
          console.error("Lỗi xóa:", err);
        }
      }

      window.onload = loadCategories;
    </script>
  </body>
</html>
