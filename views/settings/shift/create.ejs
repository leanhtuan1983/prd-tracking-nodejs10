<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tạo mới Ca/Kíp</title>
  </head>
  <body>
    <h3>Tạo mới Ca/Kíp</h3>
    <a href="/settings/shift">Danh sách Ca/Kíp</a>
    <form id="createNewShift">
      <label for="name">Name</label>
      <input type="text" name="name" id="name" />
      <label for="started_at">Thời gian bắt đầu</label>
      <input type="time" name="started_at" id="started_at" />
      <label for="finished_at">Thời gian kết thúc</label>
      <input type="time" name="finished_at" id="finished_at" />
      <button type="submit">Xác nhận</button>
    </form>
    <p id="message"></p>

    <script>
      const form = document.getElementById("createNewShift");
      const message = document.getElementById("message");

      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const name = document.getElementById("name").value;
        const started_at = document.getElementById("started_at").value;
        const finished_at = document.getElementById("finished_at").value;
        try {
          const res = await fetch("/settings/shift/add", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              name,
              started_at,
              finished_at,
            }),
          });
          const data = await res.json();
          if (data.success) {
            message.innerText = "Tạo Ca/Kíp mới thành công";
            form.reset();
          } else {
            message.innerText = "Lỗi:" + data.message;
          }
        } catch (err) {
          console.error("Lỗi gửi dữ liệu", err);
          message.innerText = "Đã xảy ra lỗi";
        }
      });
    </script>
  </body>
</html>
