<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cài đặt</title>
  </head>
  <body>
    <h2>Danh mục Ca/Kíp</h2>
    | <a href="/dashboard">Dashboard</a> ||
    <a href="/settings/shift/create">Thêm mới Ca</a> ||
    <a href="/settings/shift/assignment">Phân ca và Target</a> |
    <table border="1" style="margin-top: 20px">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Giờ bắt đầu</th>
          <th>Giờ kết thúc</th>
          <th>Thời gian làm việc</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody id="shiftTableBody"></tbody>
    </table>
    <script>
      async function loadShiftList() {
        try {
          const res = await fetch("/settings/shift/list");
          const data = await res.json();
          if (data.success) {
            const tbody = document.getElementById("shiftTableBody");
            tbody.innerHTML = "";
            data.data.forEach((shf) => {
              const row = `<tr>
                <td>${shf.id}</td>
                <td>${shf.name}</td>
                <td>${shf.started_at}</td>
                <td>${shf.finished_at}</td>
                <td>${shf.duration_hours}</td>
                <td>
                  <a href = "/settings/shift/edit/${shf.id}">Sửa</a>
                  <a href = "#" onclick = "deleteShift(${shf.id})">Xóa</a>
                </td>
              </tr>`;
              tbody.innerHTML += row;
            });
          } else {
            alert(data.message || "Không tải được dữ liệu");
          }
        } catch (err) {
          console.error("Lỗi fetch dữ liệu", err);
        }
      }
      async function deleteShift(id) {
        if (!confirm("Bạn chắc chắn muốn xóa sản phẩm này?")) return;
        try {
          const res = await fetch(`/settings/shift/delete/${id}`);
          const data = await res.json();
          alert(data.message);
          loadShiftList();
        } catch (err) {
          console.error("Lỗi xóa dữ liệu:", err);
        }
      }
      window.onload = loadShiftList;
    </script>
  </body>
</html>
